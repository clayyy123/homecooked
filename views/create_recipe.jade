html
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Great+Vibes|Lato")
  body
    .wrapper
      .header
        h1
          |Menu of the Week
        input(type="text" name="recipe_search" placeholder="Search from your recipes")
        .overlay
        ul.nav
          li
            a(href="#" class="nav_link")
              |Home
          li
            a(href="#" class="nav_link")
              |Add New Recipe
          li
            a(href="#" class="nav_link")
              |Pantry
        
      .content
        form(name="addRecipeForm")
          label Recipe Name
            input(name="recipe_name" type="text" placeholder="Recipe Name")
          label Recipe Image
            input(name="recipe_image" type="text" placeholder="Recipe Image")
          fieldset
            label Serving Size
              input(name="recipe_servsize" type="text" placeholder="4")
              |People
            label Cooking Time
              input(name="recipe_cooktime" type="text" placeholder="40")
              select(class="cooktime_measure")
                option h
                option m
          p Add Ingredient
          label(class="ingredient_field") 
            |Name
            input(name="ingredient" type="text" placeholder="Carrots")
            p Qty
            input(name="qty" type="text" placeholder="4")
            button(type="button" class="addIngredient")
              |+
          p Add a step
          label Directions
            input(name="step" type="text" placeholder="Add a step")
            button(type="button" class="addStep")
              |+
          button(type="button" class="addRecipe")
            |Add Recipe
        .preview
          .preview-header
            .left
              h2(class="recipeName") Chicken Parmesan
              p(class="recipeServing") 
                i(class="fa fa-users")
                |Serves 4 people
